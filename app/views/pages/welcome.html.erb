  <div style="display: flex; flex-direction: row; justify-content: center; align-items: center; line-height: 1em; font-size: 5em; margin-bottom:20px">
    <%if params[:first_name] == nil%>
      <h1 style="font-size: 1em;">Bienvenue cher Visiteur</h1>
    <%else%>
      <h1 style="font-size: 1em">Bienvenue <%= params[:first_name] %></h1>
    <% end %>
  </div>
<main class="container">
  <h2>Voici la liste des potins les plus croustillants du web :</h2>
  <p>Cliquez sur le potin de votre choix pour en savoir plus ;)</p>
  <% index = 1 %> <!--Création d'un index indépendant de la base de données-->
  <% Gossip.all.each do |gossip| %>
    <div class="card" style="margin-bottom : 10px;">
      <div class="card-header">
        Potin n°<%= index %>
      </div>
      <div class="card-body" >
        <blockquote class="blockquote mb-0">
          <p><%= link_to "#{gossip.title}", gossip_path(gossip.id) %></p>
          <footer class="blockquote-footer"><%= gossip.user.first_name %></footer>
        </blockquote>
      </div>
    </div>
    <% index += 1 %>
  <% end %>
</main>

